<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>OrchardCore.Data</RootNamespace>
    <!-- NuGet properties-->
    <Title>OrchardCore Data YesSql</Title>
    <Description>
      $(OCCMSDescription)

      Provides data access functionality using YesSql
    </Description>
    <PackageTags>$(PackageTags) OrchardCoreCMS Data</PackageTags>
    <DefineConstants>$(DefineConstants);JSON_POOLING_INTERNAL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\OrchardCore.Data\OrchardCore.Data.csproj" />
    <ProjectReference Include="..\OrchardCore.Data.YesSql.Abstractions\OrchardCore.Data.YesSql.Abstractions.csproj" />
    <ProjectReference Include="..\OrchardCore.Abstractions\OrchardCore.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="YesSql" />
    <PackageReference Include="ZString" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\OrchardCore.Infrastructure\Pooling\JsonArrayPool.cs">
      <Link>JsonArrayPool.cs</Link>
    </Compile>
    <Compile Include="..\OrchardCore.Infrastructure\Pooling\PoolingJsonSerializer.cs">
      <Link>PoolingJsonSerializer.cs</Link>
    </Compile>
  </ItemGroup>

</Project>
