@using OrchardCore.ContentManagement

@{
    ContentItem contentItem = Model.ContentItem;
    var linkMenuItemPart = contentItem.Content["LinkMenuItemPart"];
    int level = (int)Model.Level;

    var name = (string)linkMenuItemPart.Name;
    if (Model.Level == 0 && Model.HasItems)
    {
        name += "<b class=\"caret\"></b>";
    }

    TagBuilder tag = Tag(Model, "a");
    tag.Attributes["href"] = (string)linkMenuItemPart.Url;
    tag.InnerHtml.AppendHtml(name);
}

@tag