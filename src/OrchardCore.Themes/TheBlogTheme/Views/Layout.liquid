<!DOCTYPE html>
<html>
<head>
    <title>{% page_title Site.SiteName, position: "before", separator: "-" %}</title>
    {% helper "meta", charset:"utf-8" %}
    {% helper "meta", http_equiv:"X-UA-Compatible", content:"IE=edge" %}
    {% helper "meta", name:"viewport", content:"width=device-width, initial-scale=1.0" %}
    {% helper "link", type:"image/x-icon", rel:"shortcut icon", asp_src:"/TheBlogTheme/favicon.ico" %}

    {% helper "script", asp_name:"jquery", use_cdn:"true", at:"Foot" %}

    {% helperblock "script", at:"Foot" %}
        var foo = "bar";
    {% endhelperblock %}

    {% helper "script", asp_name:"bootstrap", use_cdn:"true", at:"Foot" %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
    {% helper "script", asp_src:"/TheBlogTheme/Scripts/clean-blog.min.js", debug_src:"/TheBlogTheme/Scripts/clean-blog.js", at:"Foot" %}

    {% helper "link", rel:"stylesheet", asp_src:"/TheBlogTheme/Styles/blog.min.css" %}

    <!-- Custom Fonts -->
    {% helper "style", asp_name:"font-awesome", use_cdn:"true" %}
    {% helper "link", asp_src:'https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic', rel:'stylesheet', type:'text/css' %}
    {% helper "link", asp_src:'https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800', rel:'stylesheet', type:'text/css' %}

    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    
    {% helper "resources", type: "Meta" %}
    {% helper "resources", type: "HeadLink" %}
    {% helper "resources", type: "Stylesheet" %}
    {% helper "resources", type: "HeadScript" %}
</head>

<body>
    <nav class="navbar navbar-default  navbar-custom navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">{{ "Toggle navigation" | t }}</span>
                    Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href= {{ "~/" | href }}>{{ Site.SiteName }}</a>
            </div>

            <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">

                {% shape "menu", alias: "alias:main-menu", cache_id: "main-menu", cache_duration: "00:05:00", cache_tag: "alias:main-menu" %}

            </div><!--/.nav-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    {% render_section "Header", required: false %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                {% render_body %}
            </div>
        </div>
    </div><!-- /.container -->

    <footer>
        <div class="container">
            <div class="row">
                {% render_section "Footer", required: false %}
            </div>
        </div>
    </footer>

    {% helper "resources", type: "FootScript" %}
</body>
</html>