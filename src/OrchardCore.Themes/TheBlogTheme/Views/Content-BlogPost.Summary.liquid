<div class="post-preview">
    {% a display_for:Model.ContentItem %}
        <h2 class="post-title">
            {{ Model.ContentItem.Content.TitlePart.Title }}
        </h2>
        {% if Model.ContentItem.Content.BlogPost.Subtitle.Text %}
        <h3 class="post-subtitle">
            {{ Model.ContentItem.Content.BlogPost.Subtitle.Text }}
        </h3>
        {% endif %}
    {% enda %}
    <p class="post-meta">
        {% assign format = "MMMM dd, yyyy" | t %}
        {% assign dateTime = Model.ContentItem.CreatedUtc | date_time: format: format %}
        {% assign owner = "<a href=\"#\">" + Model.ContentItem.Owner + "</a>" %}
        {{ "Posted by {0} on {1}" | t: owner, dateTime | raw }}
    </p>
</div>
<hr>