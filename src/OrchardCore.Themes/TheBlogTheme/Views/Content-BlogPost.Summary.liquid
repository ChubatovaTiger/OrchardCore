<div class="post-preview">
    {% helperblock "a", display_for:Model.ContentItem %}
        <h2 class="post-title">
            {{ Model.ContentItem.Content.TitlePart.Title }}
        </h2>
        {% if Model.ContentItem.Content.BlogPost.Subtitle.Text.size > 0 %}
        <h3 class="post-subtitle">
            {{ Model.ContentItem.Content.BlogPost.Subtitle.Text }}
        </h3>
        {% endif %}
    {% endhelperblock %}
    <p class="post-meta">
      {% assign format = "MMMM dd, yyyy" | t %}
      {% assign localTime = Model.ContentItem.CreatedUtc | local %}
      {% assign dateTime = "DateTime" | new_shape: utc: localTime, format: format | shape_string %}
      {{ "Posted by" | t }} <a href="#">{{ Model.ContentItem.Owner }}</a> {{ "on {0}" | t: dateTime | raw }}
    </p>
</div>
<hr>