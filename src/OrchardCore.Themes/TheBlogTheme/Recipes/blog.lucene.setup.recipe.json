{
  "name": "Blog.Lucene.Setup",
  "displayName": "Blog - Lucene setup",
  "description": "Replaces RecentBlogPosts SQL query with Lucene and runs Lucene settings recipe.",
  "author": "The Orchard Core Team",
  "website": "https://orchardcore.net",
  "version": "1.0.0",
  "issetuprecipe": false,
  "categories": [ "default" ],
  "tags": [ "blog", "lucene" ],

  "steps": [
    {
      "name": "recipes",
      "Values": [
        {
          "executionid": "Blog",
          "name": "Blog.Lucene.Settings"
        }
      ]
    },
    {
      "name": "queries",
      "Queries": [
        {
          "Source": "Lucene",
          "Name": "RecentBlogPosts",
          "Index": "Search",
          "Template": "[file:text('Snippets/recentBlogPosts.json')]",
          "Schema": "[js:base64('ew0KICAgICJ0eXBlIjogIkNvbnRlbnRJdGVtL0Jsb2dQb3N0Ig0KfQ==')]",
          "ReturnContentItems": true
        }
      ]
    }
  ]
}