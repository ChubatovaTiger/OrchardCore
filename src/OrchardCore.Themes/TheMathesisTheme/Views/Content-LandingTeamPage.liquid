{% zone "TitleBar" %}
	<nav class="navbar navbar-color-on-scroll navbar-transparent fixed-top navbar-expand-lg bg-primary" color-on-scroll="100">
		<div class="container">
			<div class="navbar-translate">
				<a class="navbar-brand" href="{{ "home" | haref }}">
					Mathesis
				</a>

				<button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
					<span class="sr-only">Toggle navigation</span>
					<span class="navbar-toggler-icon"></span>
					<span class="navbar-toggler-icon"></span>
					<span class="navbar-toggler-icon"></span>
				</button>
			</div>

			{% shape "menu", alias: "alias:main-menu", cache_id: "main-menu", cache_tag: "alias:main-menu" %}
		</div>
	</nav>
{% endzone %}

{% zone "Header" %}
	<div class="page-header header-filter" data-parallax="true" style="background-image: url('{{ Model.ContentItem.Content.LandingHeader.BackgroundImage.Paths.first | asset_url }}')">
		<div class="container">
			<div class="row">
				<div class="col-md-10 ml-auto mr-auto">
					<div class="text-center">
						<h1 class="mth-brand">{{ Model.ContentItem.Content.LandingHeader.Title.Text }}</h1>
						<h3 class="mth-brand-payload">{{ Model.ContentItem.Content.LandingHeader.Subtitle.Text }}</h3>
						<a class="btn btn-primary btn-lg text-uppercase js-scroll-trigger" href="#main">{{ Model.ContentItem.Content.LandingHeader.Button.Text }}</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endzone %}

{% zone "Content" %}
	<div class="container-fluid p-5">
		<div class="text-center pt-5">
			<h2 class="mth-section-title">{{ Model.ContentItem.Content.Teams.SectionsTitle.Text }}</h2>
		</div>
		<div class="w-90 mx-auto">
			<p class="mth-text-base">{{ Model.ContentItem.Content.Teams.SectionsDescription.Text }}</p>
		</div>
		<div class="card-deck py-5">
			{% assign teams = Model.ContentItem.Content.Teams.ContentItems %}
			{% assign righe = team.size | divided_by:3 %}

			{% for index in (0..righe) %}
				<div class="d-flex justify-content-around row w-90 mx-auto {% if righe > 0 and index < righe %}pb-5{% endif %}">
					{% if index < righe %}
						{% assign maxoffset = 2 %}
					{% else %}
						{% assign maxoffset = teams.size % 3 - 1 %}
					{% endif %}
					{% for offset in (0..maxoffset) %}
						<div class="card card-profile col-4">
							<div class="card-header card-avatar">
								<img class="img" src="{{ teams[index * 3 + offset].LandingTeam.TeamImage.Paths.first | asset_url }}" />
							</div>
							<div class="card-body">
								<h4 class="card-title mth-card-title">{{teams[index * 3 + offset].TitlePart.Title}}</h4>
								<h6 class="card-category text-muted">{{teams[index * 3 + offset].LandingTeam.Role.Text}}</h6>
								<p class="card-description mth-text-base">
									{{teams[index * 3 + offset].LandingTeam.Description.Text}}
								</p>
							</div>
							<div class="card-footer justify-content-center">
								<a href=""{{teams[index * 3 + offset].LandingTeam.Linkedin.Text }}" class="btn btn-just-icon btn-linkedin btn-round"><i class="fa fa-linkedin"></i></a>
								<a href="{{teams[index * 3 + offset].LandingTeam.Twitter.Text }}" class="btn btn-just-icon btn-twitter btn-round"><i class="fa fa-twitter"></i></a>
								<a href="{{teams[index * 3 + offset].LandingTeam.Instagram.Text }}" class="btn btn-just-icon btn-dribbble btn-round"><i class="fa fa-dribbble"></i></a>
							</div>
						</div>
					{% endfor %}
				</div>
			{% endfor %}
		</div>
	</div>
{% endzone %}