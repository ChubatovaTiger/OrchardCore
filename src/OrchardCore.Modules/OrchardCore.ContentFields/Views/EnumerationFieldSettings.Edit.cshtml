@model OrchardCore.ContentFields.Settings.EnumerationFieldSettings


@inject OrchardCore.DisplayManagement.Theming.IThemeManager ThemeManager
@inject OrchardCore.DisplayManagement.Descriptors.IShapeTableManager ShapeTableManager

@{
    var theme = await ThemeManager.GetThemeAsync();
    var shapeTable = ShapeTableManager.GetShapeTable(theme?.Id);
    var editorShapes = shapeTable.ShapeBindings.Keys.Where(x => x.StartsWith("EnumerationField_Option__", StringComparison.OrdinalIgnoreCase));
}

<fieldset class="form-group">
    <div class="form-check">
        <label class="form-check-label">
            <input asp-for="Required" type="checkbox" class="form-check-input" />
            <span class="hint">@T["Check to ensure the user is providing an option for this field."]</span>
        </label>
    </div>
</fieldset>

<fieldset class="form-group">
    <div class="row col-md">
        <label asp-for="Options">@T["Options"]</label>
        <textarea asp-for="Options" rows="5" class="form-control"></textarea>
        <span class="hint">@T["Enter an option per line. Examples :  MyOptionValue, MyOption | MyValue, #Group"]</span>
    </div>
</fieldset>

<fieldset class="form-group">
    <div class="row col-md">
        <label asp-for="Hint">@T["Hint"]</label>
        <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
        <span class="hint">@T["The hint text to display for this field on the editor."]</span>
    </div>
</fieldset>

<div class="row">
    <fieldset class="form-group col-sm-6">
        <label asp-for="Editor">@T["What type of editor should be used?"]</label>
        <select asp-for="Editor" class="form-control">
            @foreach (var editorShape in editorShapes)
            {
                dynamic shape = await Factory.CreateAsync(editorShape);
                shape.Editor = Model.Editor;
                @await DisplayAsync(shape)
            }
        </select>
    </fieldset>
</div>

<fieldset class="form-group">
    <div class="row col">
        <label for="DefaultValue">@T["Default value"]</label>
        <input asp-for="DefaultValue" class="form-control" type="text" />
        <span class="hint">@T["The default option proposed when creating a content item. If there is no equivalent choice among Options, it will not be used. (optional) When using the Listbox or Checkbox List mode, you can define multiple options separated by a semicolon."]</span>
    </div>
</fieldset>