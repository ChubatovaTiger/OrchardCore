@model OrchardCore.ContentFields.Settings.DateFieldSettings

<div class="mb-3">
    <div class="form-check">
        <input asp-for="Required" type="checkbox" class="form-check-input">
        <label class="form-check-label" asp-for="Required">@T["Required"]</label>
        <span class="hint dashed">@T["Whether a value is required."]</span>
    </div>
</div>

<div class="mb-3">
    <div class="w-md-75 w-xl-50 pe-md-3">
        <label asp-for="Hint" class="form-label">@T["Hint"]</label>
        <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
    </div>
    <span class="hint">@T["The hint text to display for this field on the editor."]</span>
</div>

<div class="form-group">
    <div class="w-md-75 w-xl-50 pr-md-3">
        <div class="custom-control custom-checkbox">
            <input asp-for="Currently" type="checkbox" class="custom-control-input"
                   onchange="document.getElementById('@Html.IdFor(a=>a.DefaultValue)').disabled = this.checked;">
            <label class="custom-control-label" asp-for="Currently">@T["Defalut current date"]</label>
            <input type="date" class="form-control" asp-for="DefaultValue" disabled="@Model.Currently">
        </div>
    </div>
    <span class="hint">@T["The default current is not selected and can be customized."]</span>
</div>