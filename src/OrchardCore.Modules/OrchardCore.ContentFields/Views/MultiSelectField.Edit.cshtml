@model OrchardCore.ContentFields.ViewModels.EditMultiSelectFieldViewModel
@using Newtonsoft.Json

@{
    var settings = Model.PartFieldDefinition.GetSettings<MultiSelectFieldSettings>();
    var culture = await Orchard.GetContentCultureAsync(Model.Field.ContentItem);
    var options = new List<SelectListItem>();
    var listOptions = string.IsNullOrWhiteSpace(settings.Options) ? new MultiSelectListValueOption[0] : JsonConvert.DeserializeObject<MultiSelectListValueOption[]>(settings.Options);

    foreach (var option in listOptions)
    {
        bool isSelected = Model.Values?.Contains(option.Value) ?? false; 

        options.Add(new SelectListItem { Text = option.Name, Value = option.Value, Selected = isSelected });
    }
}
<label asp-for="Values">@Model.PartFieldDefinition.DisplayName()</label>
<div class="form-group">
    <div class="row col-md-6 col-lg-4">
        <select class="form-control content-preview-select" asp-for="Values" asp-items="options" multiple style="min-height: 200px"></select>
    </div>
</div>
@if (!String.IsNullOrEmpty(settings.Hint))
{
    <span class="hint">@settings.Hint</span>
}
