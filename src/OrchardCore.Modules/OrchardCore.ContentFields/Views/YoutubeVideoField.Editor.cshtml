@model OrchardCore.ContentFields.ViewModels.EditYoutubeVideoFieldViewModel;
@using OrchardCore.ContentManagement.Metadata.Models
@using OrchardCore.ContentFields.Settings;

@{
    var settings = Model.PartFieldDefinition.Settings.ToObject<YoutubeVideoFieldSettings>();
}

<fieldset class="form-group">
    <label asp-for="RawAddress">@Model.PartFieldDefinition.DisplayName()</label>
    <input asp-for="RawAddress" class="form-control content-preview-text" />
    @if (!String.IsNullOrEmpty(settings.Hint))
    {
    <span class="hint">@settings.Hint</span>
    }
    <div>
        <span class="hint">@T["In the page of the video in Youtube website, click on the Share button, then select 'Embed', then copy the src value and paste it into the above Textbox"]</span>
    </div>

</fieldset>
