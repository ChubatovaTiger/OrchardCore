@model MetadataPartSettingsViewModel

<div class="metadata-settings">
    <p>The title (or meta title) and meta description tags are supported by default. The following tags are optionally supported.</p>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="SupportMetaKeywords" checked="@Model.SupportMetaKeywords">
            <label class="custom-control-label" asp-for="SupportMetaKeywords">@T["Support meta keywords"]</label>
        </div>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="SupportOpenGraph" checked="@Model.SupportOpenGraph">
            <label class="custom-control-label" asp-for="SupportOpenGraph">@T["Support Open Graph tags (Facebook)"]</label>
        </div>
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" class="custom-control-input" asp-for="SupportTwitterCards" checked="@Model.SupportTwitterCards">
            <label class="custom-control-label" asp-for="SupportTwitterCards">@T["Support Twitter tags"]</label>
        </div>
    </div>
</div>