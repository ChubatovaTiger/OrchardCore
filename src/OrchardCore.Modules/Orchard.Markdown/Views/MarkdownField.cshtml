@model Orchard.Markdown.ViewModels.DisplayMarkdownFieldViewModel
@inject Orchard.Tokens.Services.ITokenizer Tokenizer
@using Orchard.ContentManagement.Metadata.Models

@{
    string markdown = Model.Field.Markdown;
    var html = markdown == null ? "" : Markdig.Markdown.ToHtml(markdown);
}

@Model.PartFieldDefinition.DisplayName(): @Html.Raw(html)

