@model Orchard.ContentFields.ViewModels.EditNumericFieldViewModel
@using System.Globalization
@using Orchard.ContentManagement.Metadata.Models
@using Orchard.ContentFields.Settings;
@{
    var settings = Model.PartFieldDefinition.Settings.ToObject<NumericFieldSettings>();
    string name = Model.PartFieldDefinition.DisplayName();
    string step = Math.Pow(10, 0 - settings.Scale).ToString(CultureInfo.InvariantCulture);
}

<fieldset class="form-group">
    <div class="row col-md">
        <label asp-for="Value">@name</label>
        <input asp-for="Value" type="range" class="form-control content-preview-select" required="@settings.Required" min="@(settings.Minimum.HasValue ? settings.Minimum.Value : 0)" max="@(settings.Maximum.HasValue ? settings.Maximum.Value : 10000)" step="@step" oninput="outputUpdate(value)" />
<output asp-for="Value" id="range">@Model.Value</output>
        <span class="hint">@settings.Hint</span>
    </div>
</fieldset>
<script>
function outputUpdate(value) {
	document.querySelector('#range').value = value;
}
</script>