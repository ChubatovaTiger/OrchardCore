@model TitlePartViewModel
@using OrchardCore.ContentManagement
@using OrchardCore.ContentManagement.Metadata.Models
@using OrchardCore.Localization
@using OrchardCore.Title.ViewModels;
@inject IContentManager ContentManager

@{
    var cultureAspect = await ContentManager.PopulateAspectAsync<CultureAspect>(Model.TitlePart.ContentItem);
}

<fieldset class="form-group" asp-validation-class-for="Title">
    <label asp-for="Title">@T["Title"]</label>
    <input asp-for="Title" class="form-control content-preview-text content-caption-text" autofocus="autofocus" dir="@cultureAspect.LanguageDirection" />
    <span asp-validation-for="Title"></span>
    <span class="hint">@T["The title of the content item."]</span>
</fieldset>
