@model TemplateViewModel
@using Orchard.DisplayManagement;
@inject Orchard.Environment.Extensions.IExtensionManager ExtensionManager;

@{
    var themes = ExtensionManager.GetExtensions().Where(e => e.Manifest.IsTheme() &&
        !e.Manifest.Tags.Contains("hidden") && !e.Manifest.Tags.Contains("admin"));
}

<script asp-src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.26.0/codemirror.min.js" depends-on="admin" at="Foot"></script>
<script asp-src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.26.0/mode/javascript/javascript.min.js" at="Foot"></script>

<script asp-src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.26.0/addon/mode/simple.min.js" at="Foot"></script>
<script asp-src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.26.0/addon/mode/multiplex.min.js" at="Foot"></script>
<script asp-src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.26.0/mode/xml/xml.min.js" at="Foot"></script>

<script asp-src="/Orchard.Liquid/codemirror/liquid.js" at="Foot"></script>

<h1>@RenderTitleSegments(T["Create Template"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="Create" method="post">
    <div class="form-group" asp-validation-class-for="View">
        <label asp-for="View">@T["View"]</label>
        <span asp-validation-for="View" class="text-danger">@T["The view name is required."]</span>
        <input asp-for="View" class="form-control" autofocus/>
        <span class="hint">@T["The view name of the template."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="Theme">
        <label asp-for="Theme">@T["Theme"]</label>
        <select asp-for="Theme" class="form-control">
            @foreach (var theme in themes)
            {
                <option value="@theme.Id">@theme.Id</option>
            }
        </select>
        <span class="hint">@T["The theme used to validate the template."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="Description">
        <label asp-for="Description">@T["Description"]</label>
        <input asp-for="Description" class="form-control" autofocus />
        <span class="hint">@T["The description of the template."]</span>
    </div>

    <div class="form-group" asp-validation-class-for="Content">
        <label asp-for="Content">@T["Content"]</label>
        <textarea asp-for="Content" rows="10" class="form-control"></textarea>
        <span class="hint">@T["The Liquid or Razor template."]</span>
    </div>

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>

<script at="Foot">
$(function () {
    var editor = CodeMirror.fromTextArea(document.getElementById('@Html.IdFor(x => x.Content)'), {
        lineNumbers: true,
        styleActiveLine: true,
        matchBrackets: true,
        mode: { name: "liquid" },
      });
});
</script>