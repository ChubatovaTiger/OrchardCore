@using OrchardCore.Forms.ViewModels;
@model ValidationRulePartEditViewModel

<div class="form-group">
    <label asp-for="Type">@T["Validate Rule Type"]</label>
    <select asp-for="Type" class="form-control content-preview-select">
        <option value="none">@T["None"]</option>
        <option value="contains">@T["Contains"]</option>
        <option value="isCurrency">@T["IsCurrency"]</option>
        <option value="isDate">@T["IsDate"]</option>
        <option value="isDecimal">@T["IsDecimal"]</option>
        <option value="isEmail">@T["IsEmail"]</option>
        <option value="isEmpty">@T["IsEmpty"]</option>
        <option value="isFloat">@T["IsFloat"]</option>
        <option value="isInt">@T["IsInt"]</option>
        <option value="isLength">@T["IsLength"]</option>
        <option value="isURL">@T["isURL"]</option>
        <option value="matches">@T["Matches"]</option>

    </select>
    <span class="hint">@T["The validate type."]</span>
</div>

<div class="form-group">
    <label asp-for="Option">@T["Validate Rule Options"]</label>
    <input asp-for="Option" type="text" class="form-control content-preview-text" />
    <span class="hint">@T["The text to check the string. For detailed rules, please see https://github.com/validatorjs/validator.js"]</span>
</div>

