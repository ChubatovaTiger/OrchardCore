@model OrchardCore.Users.ViewModels.EditUserPhoneNumberViewModel

<div class="mb-3" asp-validation-class-for="PhoneNumber">
    <label asp-for="PhoneNumber">@T["Phone Number"]</label>
    <div class="input-group col-md-4">
        <span class="input-group-text"><i class="fa-solid fa-phone" aria-hidden="true"></i></span>
        <input asp-for="PhoneNumber" class="form-control" type="tel" asp-is-disabled="@(!Model.AllowEditing)" />
        <span asp-validation-for="PhoneNumber" class="text-danger">@T["The phone number is invalid."]</span>
    </div>
</div>
