@model OrchardCore.Users.ViewModels.AccountActivationViewModel

@{
    ViewLayout = "Layout__Login";
}

    <form asp-controller="Registration" asp-action="ActivateAccount" method="post" class="form-horizontal">
        <h4>@T["Choose password"]</h4>
        <hr />
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="ActivationToken" class="form-control" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-4 control-label">@T["New password"]</label>
            <div class="col-md-8">
                <input asp-for="Password" class="form-control" />
                <div id="passwordStrength"></div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PasswordConfirmation" class="col-md-4 control-label">@T["New password confirmation"]</label>
            <div class="col-md-8">
                <input asp-for="PasswordConfirmation" class="form-control" />
                <span asp-validation-for="PasswordConfirmation" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-4 col-md-8">
                <button type="submit" class="btn btn-primary">@T["Choose password"]</button>
            </div>
        </div>
    </form>