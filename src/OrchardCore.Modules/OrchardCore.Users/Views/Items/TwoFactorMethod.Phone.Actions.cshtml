@using OrchardCore.Users.Models
@using OrchardCore.Entities

@model TwoFactorMethod
@{
    var settings = Site.As<SmsAuthenticatorLoginSettings>();
}

@if (!Model.IsEnabled)
{
    <a asp-action="Index" asp-controller="SmsAuthenticator" class="btn btn-sm btn-primary me-1">@T["Verify Phone Number"]</a>
}
else
{
    <div class="btn btn-sm btn-success disabled me-1">@T["Verified"]</div>

    @if (settings.AllowChangePhoneNumber)
    {
        <a asp-action="Index" asp-controller="SmsAuthenticator" class="btn btn-sm btn-primary me-1">@T["Edit"]</a>
    }
}
