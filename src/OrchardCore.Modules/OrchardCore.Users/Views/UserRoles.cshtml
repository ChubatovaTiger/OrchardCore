@using OrchardCore.Security.Services
@model SummaryAdminUserViewModel

@inject IRoleService RoleService

@{
    var roleNames = await RoleService.GetNormalizedRoleNamesAsync();
}

<h4>@T["Roles"]</h4>
<ul class="list-unstyled">
    @foreach (var normalizedRoleName in Model.User.RoleNames)
    {
        var roleName = roleNames.FirstOrDefault(roleName => roleName == normalizedRoleName);
        if (roleName == null)
        {
            continue;
        }

        <li>@roleName</li>
    }
</ul>
