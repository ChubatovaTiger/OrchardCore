@using OrchardCore.ContentManagement

@{
    ContentItem contentItem = Model.ContentItem;
}

@if (contentItem.ModifiedUtc.HasValue)
{
    <small class="text-muted">
        <i class="fa fa-calendar"></i> @await DisplayAsync(await New.DateTime(Utc: contentItem.ModifiedUtc, Format:"g"))
        <i class="fa fa-user"></i> @contentItem.Author
    </small>
}
