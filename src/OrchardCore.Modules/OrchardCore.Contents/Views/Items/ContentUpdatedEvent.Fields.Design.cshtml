@using OrchardCore.Contents.Workflows.Activities
@using OrchardCore.ContentManagement.Metadata.Models
@{
    var activity = (ContentEvent)Model.Activity;
    var contentTypeFilter = (IList<ContentTypeDefinition>)Model.ContentTypeFilter;
    var contentTypeFilterText = contentTypeFilter.Any() ? string.Join(", ", contentTypeFilter.Select(x => x.DisplayName)) : T["Any content type"].Value;
}
<header>
    <h4><i class="fa fa-bolt"></i>@T["Content Updated"]</h4>
</header>
<em>@contentTypeFilterText</em>