@model ContentOptionsViewModel
<div class="input-group input-group-sm w-50 d-inline-flex has-filter">
    <div class="input-group-prepend">
        <button class="btn btn-sm dropdown-toggle" style="border:1px solid lightgrey" type="button" data-toggle="dropdown" id="filter-dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-filter" title="@T["Filters"]"></i>
        </button>
        <div class="dropdown-menu @if(CultureInfo.CurrentUICulture.IsRightToLeft()){<text>dropdown-menu-right</text>}" aria-labelledby="filter-dropdown">
            <a class="dropdown-item" href="?q=status:Draft">@T["Only draft items"]</a>
            <a class="dropdown-item" href="?q=status:Published">@T["Only published items"]</a>
            <a class="dropdown-item" href="?q=status:Owner">@T["Owned by me"]</a>
        </div>
    </div>
    <input asp-for="OriginalSearchText" type="hidden"></input>

    <label asp-for="SearchText" class="sr-only">@T["Search"]</label>
    <i class="fa fa-search form-control-feedback"></i>
    <input asp-for="SearchText" class="form-control" placeholder="@T["Search"]" inputmode="search" type="search" autofocus />
</div>
