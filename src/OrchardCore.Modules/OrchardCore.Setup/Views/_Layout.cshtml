@inject OrchardCore.IOrchardHelper Orchard
@{
    var languageDirection = Orchard.CultureDir();
}
<!DOCTYPE html>
<html lang="@Orchard.CultureName()">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Orchard Setup</title>
    <link type="text/css" rel="stylesheet" href="~/OrchardCore.Setup/Styles/setup@(languageDirection == "rtl" ? "-rtl" : "").css">
    <link type="text/css" rel="stylesheet" href="~/OrchardCore.Resources/Styles/font-awesome.min.css" />
    @await RenderSectionAsync("Header", required: false)
</head>
<body dir="@languageDirection">
    <div class="container">

        @RenderBody()

        <hr />
        <footer>
            @await RenderSectionAsync("Footer", required: false)
        </footer>
    </div>
</body>
</html>