@using OrchardCore.Workflows.Activities
@{
    var activity = (ForkTask)Model.Activity;
}
<header>
    <h4><i class="fa fa-code-fork"></i>@T["Fork"]</h4>
</header>
@if (activity.Forks.Any())
{
    <span>@T["Fork execution into <em>{0}</em>", string.Join(", ", activity.Forks)]</span>
}
else
{
    <span>@T["No forks"]</span>
}