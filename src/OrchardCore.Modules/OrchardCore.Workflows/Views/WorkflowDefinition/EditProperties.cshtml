@model OrchardCore.Workflows.ViewModels.WorkflowDefinitionPropertiesViewModel

<h1>@RenderTitleSegments(T["Edit Workflow Definition Properties"])</h1>

<div asp-validation-summary="ModelOnly"></div>
<form asp-action="EditProperties" method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <fieldset class="form-group" asp-validation-class-for="Name">
        <label asp-for="Name">@T["Workflow Name"]</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name" class="form-control" autofocus />
        <div class="hint">@T["The name of the workflow."]</div>
    </fieldset>

    <fieldset class="form-group form-check">
        <label class="form-check-label" asp-for="IsEnabled">
            <input class="form-check-input" type="checkbox" asp-for="IsEnabled">
            @T["Enabled"]
        </label>
        <div class="hint">@T["Uncheck to disable this workflow from being executed."]</div>
    </fieldset>

    <fieldset class="form-group form-check">
        <label class="form-check-label" asp-for="IsSingleton">
            <input class="form-check-input" type="checkbox" asp-for="IsSingleton">
            @T["Single Instance"]
        </label>
        <div class="hint">@T["Check to ensure only one instance of this workflow can execute at a time. Leave unchecked to allow any number of instances to execute at the same time."]</div>
    </fieldset>

    <fieldset class="form-group form-check">
        <label class="form-check-label" asp-for="DeleteFinishedWorkflows">
            <input class="form-check-input" type="checkbox" asp-for="DeleteFinishedWorkflows">
            @T["Delete Finished Instances"]
        </label>
        <div class="hint">@T["Check to automatically delete finished workflow instances. Leave unchecked to maintain a history of executed workflows."]</div>
    </fieldset>

    <fieldset>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
            <a class="btn btn-secondary" href="@Model.ReturnUrl">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>
