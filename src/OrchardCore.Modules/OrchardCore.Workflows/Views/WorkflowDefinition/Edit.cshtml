@model WorkflowDefinitionViewModel
@using Microsoft.AspNetCore.Antiforgery;
@using OrchardCore.Workflows.ViewModels;
@inject IAntiforgery antiforgery

<h1>@RenderTitleSegments(Model.WorkflowDefinition.Name)</h1>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index">@T["Workflow Definitions"]</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.WorkflowDefinition.Name</li>
    </ol>
</nav>

<nav class="admin-toolbar">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <button type="button" id="add-task-button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#activity-picker" data-picker-title="@T["Available Tasks"]" data-activity-type="Task">
                @T["Add Task"]
            </button>
            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#activity-picker" data-picker-title="@T["Available Events"]" data-activity-type="Event">
                @T["Add Event"]
            </button>
        </li>
    </ul>
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="btn btn-secondary btn-sm" asp-action="EditProperties" asp-route-id="@Model.WorkflowDefinition.Id" asp-route-returnUrl="@Context.Request.Path">@T["Properties"]</a>
            <a class="btn btn-secondary btn-sm" asp-action="Index" asp-controller="WorkflowInstance" asp-route-workflowDefinitionId="@Model.WorkflowDefinition.Id" asp-route-returnUrl="@Context.Request.Path">@T["Instances"] <span class="badge badge-light">@Model.WorkflowInstanceCount</span></a>
            <div class="btn-group" role="group">
                <button id="workflow-actions-button" type="button" class="btn btn-secondary btn-sm dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @T["Actions"]
                </button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="workflow-actions-button">
                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#workflow-url-generator-modal">@T["Generate URL"]</a>
                </div>
            </div>
        </li>
    </ul>
</nav>

<div asp-validation-summary="ModelOnly"></div>

<form asp-action="Edit" method="post" id="workflowEditorForm">
    <fieldset class="form-group">
        <div class="workflow-container">
            <div class="workflow-canvas-container">
                <div class="workflow-canvas" data-workflow-definition="@Model.WorkflowDefinitionJson" data-workflow-delete-activity-prompt="@T["Are you sure you want to delete this activity?"]" data-workflow-local-id="@Model.LocalId" data-workflow-load-local-state="@Model.LoadLocalState.ToString().ToLower()">
                    @foreach (var activityShape in Model.ActivityDesignShapes)
                    {
                        @await DisplayAsync(activityShape)
                    }
                </div>
            </div>
        </div>
        <input asp-for="State" id="workflowStateInput" type="hidden" />
    </fieldset>
    <fieldset class="form-group">
        <div class="form-group">
            <button class="btn btn-primary" type="submit">@T["Save"]</button>
            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
        </div>
    </fieldset>
</form>

<!-- Activity Picker Modal -->
<div class="modal fade modal-activities" id="activity-picker" tabindex="-1" role="dialog" aria-labelledby="activity-picker-label" aria-hidden="true" data-activity-type="Event|Task">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="activity-picker-label">@T["Available Activities"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-sm-3 col-md-3 col-lg-2">
                        <div class="form-group">
                            <input class="form-control" type="search" placeholder="@T["Filter"]" aria-label="@T["Filter"]" autofocus>
                        </div>
                        <ul class="nav nav-pills flex-column activity-picker-categories">
                            <li class="nav-item">
                                <a class="nav-link active" href="#all" data-toggle="pill">All</a>
                            </li>
                            @foreach (var category in Model.ActivityCategories)
                            {
                                <li class="nav-item" data-category="@category.Name.HtmlClassify()">
                                    <a class="nav-link" href="#@category.Name.HtmlClassify()" data-toggle="pill">@category</a>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-sm-9 col-md-9 col-lg-10">
                        <div class="card-columns tab-content">
                            @foreach (var activityShape in Model.ActivityThumbnailShapes)
                            {
                                @await DisplayAsync(activityShape)
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@T["Cancel"]</button>
            </div>
        </div>
    </div>
</div>

<!-- Workflow URL Generator Modal -->
@{
    var antiforgeryTokenSet = antiforgery.GetTokens(Context);
}
<div class="modal fade modal-workflow-url-generator" id="workflow-url-generator-modal" tabindex="-1" role="dialog" aria-labelledby="workflow-url-generator-label" aria-hidden="true" data-generate-url="@Url.Action("GenerateUrl", "WorkflowDefinition", new { id = Model.WorkflowDefinition.Id })" data-antiforgery-token="@antiforgeryTokenSet.RequestToken" data-antiforgery-header-name="@antiforgeryTokenSet.HeaderName">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="workflow-url-generator-label">@T["Workflow URL Generator"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group mb-3">
                    <input type="text" id="workflow-url-text" class="form-control" />
                    <div class="input-group-append">
                        <button class="btn btn-link" type="button" id="copy-workflow-url-button" title="@T["Copy to clipboard"]" data-copied-title="@T["Copied!"]">@T["Copy"]</button>
                    </div>
                </div>
                <span class="hint"><i class="fa fa-exclamation-triangle"></i> @T["Anyone that invokes this URL will trigger this workflow. Keep it secure if you do not intend to allow others to trigger this workflow."]</span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@T["Cancel"]</button>
                <button type="button" class="btn btn-primary" id="generate-workflow-url-button">@T["Regenerate"]</button>
            </div>
        </div>
    </div>
</div>

<style asp-src="~/OrchardCore.Workflows/Styles/jsplumbtoolkit-defaults.min.css" debug-src="~/OrchardCore.Workflows/Styles/jsplumbtoolkit-defaults.css" cdn-src="https://cdnjs.cloudflare.com/ajax/libs/jsPlumb/2.5.5/css/jsplumbtoolkit-defaults.min.css" debug-cdn-src="https://cdnjs.cloudflare.com/ajax/libs/jsPlumb/2.5.5/css/jsplumbtoolkit-defaults.css" version="2.5.5"></style>
<style asp-src="~/OrchardCore.Workflows/Styles/orchard.workflows-editor.min.css" debug-src="~/OrchardCore.Workflows/Styles/orchard.workflows-editor.css"></style>
<script asp-name="bootstrap" version="4.0.0" at="Foot"></script>
<script asp-name="jsplumb" depends-on="jQuery" asp-src="~/OrchardCore.Workflows/Scripts/jsplumb.min.js" debug-src="~/OrchardCore.Workflows/Scripts/jsplumb.js" cdn-src="https://cdnjs.cloudflare.com/ajax/libs/jsPlumb/2.5.5/jsplumb.min.js" debug-cdn-src="https://cdnjs.cloudflare.com/ajax/libs/jsPlumb/2.2.9/jsplumb.js" type="text/javascript" version="2.5.5" at="Foot"></script>
<script depends-on="jsplumb" asp-src="~/OrchardCore.Workflows/Scripts/orchard.workflows-editor.min.js" debug-src="~/OrchardCore.Workflows/Scripts/orchard.workflows-editor.js" type="text/javascript" at="Foot"></script>
