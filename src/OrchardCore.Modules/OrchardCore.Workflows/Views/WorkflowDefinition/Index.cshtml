@model AdminIndexViewModel
@using OrchardCore.Workflows.ViewModels;

<h1>@RenderTitleSegments(T["Manage Workflow Definitions"])</h1>


<nav class="admin-toolbar">
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a asp-route-action="EditProperties" class="btn btn-primary" role="button">@T["Create new Workflow Definition"]</a>
        </li>
    </ul>
    <form asp-action="Index" method="get" class="form-inline">
        <input id="search-box" asp-for="Options.Search" class="form-control mr-sm-2" type="text" placeholder="@T["Search"]" autofocus="autofocus">
        <button type="submit" class="btn btn-secondary my-2 my-sm-0">@T["Search"]</button>
    </form>
</nav>


@using (Html.BeginForm())
{
    <ul class="list-group">
        @foreach (var entry in Model.WorkflowDefinitions)
        {
            <li class="list-group-item">
                <div class="properties">
                    <div class="related">
                        <a asp-action="EditProperties" asp-route-id="@entry.DefinitionId" class="btn btn-primary btn-sm">@T["Edit Properties"]</a>
                        <a asp-action="Edit" asp-route-id="@entry.DefinitionId" class="btn btn-primary btn-sm">@T["Edit"]</a>
                        <a asp-action="Delete" asp-route-id="@entry.DefinitionId" class="btn btn-danger btn-sm" itemprop="RemoveUrl UnsafeUrl">@T["Delete"]</a>
                    </div>

                    <a asp-action="Edit" asp-route-id="@entry.DefinitionId">@entry.Name</a>
                </div>
            </li>
        }
    </ul>
}

@await DisplayAsync(Model.Pager)