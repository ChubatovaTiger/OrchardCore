@inject IOptions<AutorouteOptions> AutorouteOptions

@{
    ContentPickerMenuItemPart menuItemPart = Model.MenuItemPart;
    var routeValues = new RouteValueDictionary(AutorouteOptions.Value.GlobalRouteValues);
    routeValues[AutorouteOptions.Value.ContentItemIdKey] = menuItemPart.ContentItem.Content.ContentPickerMenuItemPart.SelectedContentItem.ContentItemIds[0];
    var linkUrl = Url.RouteUrl(routeValues);
}

<span>@menuItemPart.Name <code>@linkUrl</code><span class="text-muted">- ContentPickerLink</span></span>
