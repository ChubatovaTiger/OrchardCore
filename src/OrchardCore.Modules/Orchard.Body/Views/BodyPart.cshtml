@using Fluid;
@model Orchard.Body.ViewModels.BodyPartViewModel
@inject Orchard.Liquid.ILiquidTemplateManager TemplateManager

@{ 
    string body = Model.Body;
    var templateContext = new TemplateContext();
    templateContext.SetValue("ContentItem", Model.BodyPart.ContentItem);

    await TemplateManager.RenderAsync(body, Output, NullEncoder.Default, templateContext);
}