@model MarkdownBodyPartViewModel
@using OrchardCore.ContentManagement
@using OrchardCore.ContentManagement.Metadata.Models
@using OrchardCore.Localization
@using OrchardCore.Markdown.ViewModels;
@using OrchardCore.Markdown.Settings;
@inject IContentManager ContentManager

@{
    var settings = Model.TypePartDefinition.Settings.ToObject<MarkdownBodyPartSettings>();
    var cultureAspect = await ContentManager.PopulateAspectAsync<CultureAspect>(Model.MarkdownBodyPart.ContentItem);
}

<fieldset class="form-group">
    <label asp-for="Source">@Model.TypePartDefinition.DisplayName()</label>
    <textarea asp-for="Source" rows="5" class="form-control content-preview-text" dir="@cultureAspect.LanguageDirection"></textarea>
    <span class="hint">@T["The body of the content item, in Markdown format."]</span>
</fieldset>
