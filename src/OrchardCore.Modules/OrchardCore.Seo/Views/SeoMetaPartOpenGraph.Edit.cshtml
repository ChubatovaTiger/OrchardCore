@model OrchardCore.Seo.ViewModels.SeoMetaPartOpenGraphViewModel

<div class="form-group" asp-validation-class-for="OpenGraphType">
    <label asp-for="OpenGraphType">@T["Open Graph Type"] </label>
    <input asp-for="OpenGraphType" class="form-control content-preview-text" />
    <span class="hint">@T["The Social Meta Settings Open Graph Type is used by default, or can be overridden here."]</span>
</div>  

<div class="form-group" asp-validation-class-for="OpenGraphTitle">
    <label asp-for="OpenGraphTitle">@T["Open Graph Title"] </label>
    <input asp-for="OpenGraphTitle" class="form-control content-preview-text" />
    <span class="hint">@T["The Title is used by default, then the Page Title, or can be overridden here."]</span>
</div>

<div class="form-group" asp-validation-class-for="OpenGraphDescription">
    <label asp-for="OpenGraphDescription">@T["Open Graph Description"] </label>
    <textarea asp-for="OpenGraphDescription" class="form-control content-preview-text" rows="5"></textarea>
    <span class="hint">@T["The Meta Description is used by default, or can be overridden here."]</span>
</div>

<style asp-name="codemirror"></style>
<script asp-name="codemirror" depends-on="admin" at="Foot"></script>
<script asp-name="codemirror-addon-display-autorefresh" at="Foot"></script>
<script asp-name="codemirror-addon-selection-active-line" at="Foot"></script>
<script at="Foot">
    $(function () {
        var optionsTextArea = document.getElementById('@Html.IdFor(x => x.OpenGraphDescription)');
        if (optionsTextArea) {
            var editor = CodeMirror.fromTextArea(optionsTextArea, {
                autoRefresh: true,
                lineWrapping: true,
                styleActiveLine: true
            });
        }
    });
</script>


