@{
    Layout = null;
}

<div id="mediaApp" style="display:none">
    <div class="message-warning" v-if="errors.length > 0">
        <ul>
            <li v-for="e in errors">
                <p>{{e}}</p>
            </li>
        </ul>
    </div>

    <div class="media-container row">

        <div id="navigationApp" class="media-container-navigation" v-cloak>
            <h5>Media Explorer</h5>
            <ol id="media-container-navigation-menu">
                <folder :model="root" ref="rootFolder" :selected-in-media-app="selectedFolder">
                </folder>
            </ol>
        </div>

        <div class="media-container-main" v-cloak>
            <nav class="navbar action-bar">
                <div class="dropdown d-lg-none visible-on-modal">
                    <button class="btn btn-secondary dropdown-toggle btn-sm mr-2" type="button" id="selectionButtonsDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        @T["Actions"]
                    </button>
                    <div class="dropdown-menu" aria-labelledby="selectionButtonsDropDown">
                        <a href="javascript:;" class="dropdown-item" v-on:click="selectAll">@T["All"]</a>
                        <a href="javascript:;" class="dropdown-item" v-on:click="unSelectAll" v-bind:disabled="selectedMedias.length < 1">@T["None"]</a>
                        <a href="javascript:;" class="dropdown-item" v-on:click="invertSelection">@T["Invert"]</a>
                        <div class="dropdown-divider"></div>
                        <a href="javascript:;" class="dropdown-item"
                           v-bind:class="{ disabled : selectedMedias.length < 1 }" v-on:click="deleteMediaList">
                            @T["Delete"] <span>({{ selectedMedias.length }})</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="javascript:;" class="dropdown-item"
                           v-on:click="smallThumbs = !smallThumbs">
                            <span v-if="smallThumbs"> @T["Large"] </span>
                            <span v-else> @T["Small"] </span>
                        </a>
                        <a  href="javascript:;" class="dropdown-item"
                           v-on:click="gridView = !gridView">
                            <span v-if="gridView"> @T["Table"]</span>
                            <span v-else> @T["Grid"] </span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <button type="button" class="btn btn-outline-secondary" v-bind:disabled="mediaFilter == '' " v-on:click="mediaFilter = '' ">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control" placeholder="@T["Filter..."]" aria-label="@T["Filter..."]"
                                   v-model="mediaFilter">
                        </div>
                    </div>
                </div>
                <div class="d-lg-inline-flex d-none hidden-on-modal">
                    <button type="button" class="btn btn-secondary btn-sm mr-1" v-on:click="selectAll">@T["All"]</button>
                    <button type="button" class="btn btn-secondary btn-sm mr-1" v-on:click="unSelectAll" v-bind:disabled="selectedMedias.length < 1">@T["None"]</button>
                    <button type="button" class="btn btn-secondary btn-sm mr-2" v-on:click="invertSelection">@T["Invert"]</button>
                    <button type="button" class="btn btn-secondary btn-sm mr-2" v-on:click="deleteMediaList"
                            v-bind:disabled="selectedMedias.length < 1">
                        @T["Delete"] <span style="min-width:25px; display:inline-block;">({{ selectedMedias.length}})</span>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm mr-2" v-on:click="smallThumbs = !smallThumbs">
                        <span v-if="smallThumbs">
                            @T["Large"]
                        </span> <span v-else> @T["Small"] </span>
                    </button>
                    <button type="button" class="btn btn-secondary btn-sm mr-2" v-on:click="gridView = !gridView">
                        <span v-if="gridView">
                            @T["Table"]
                        </span> <span v-else> @T["Grid"] </span>
                    </button>
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary" type="button" v-bind:disabled="mediaFilter == '' " v-on:click="mediaFilter = '' "><i class="fa fa-times"></i></button>
                        </div>
                        <input type="text" v-model="mediaFilter" class="form-control input-filter" placeholder="@T["Filter..."]" aria-label="@T["Filter..."]">
                    </div>
                </div>

                <div class="btn-group btn-group-sm text-right" style="justify-content:flex-end; flex-grow:1;">
                    <label for="fileupload" class="btn btn-sm btn-success fileinput-button upload-button">
                        <input id="fileupload" type="file" name="files" multiple="multiple">
                        <i class="fa fa-upload" aria-hidden="true"></i>
                        @T["Upload files..."]
                    </label>
                </div>
            </nav>


            <nav class="breadcrumb">
                <span class="breadcrumb-item" v-bind:class="{ active: isHome }"><a :href="isHome ? null : '#'" v-on:click="selectRoot">@T["Media Library"]</a></span>
                <span v-for="(folder, i) in parents" v-cloak
                      class="breadcrumb-item"
                      v-bind:class="{active: parents.length - i == 1}">
                    <a :href="parents.length - i == 1 ? null : '#'" v-on:click="selectedFolder = folder;">{{ folder.name }}</a>
                </span>
                <div class="btn-group breadcrumb-buttons">
                    <a v-cloak href="javascript:;" class="btn btn-light btn-sm" v-on:click="createFolder"><i class="fa fa-plus"></i></a>
                    <a v-cloak v-show="!isHome" href="javascript:;" v-on:click="deleteFolder" class="btn btn-light btn-sm"><i class="fa fa-trash"></i></a>
                </div>
            </nav>

            <table class="table table-bordered media-items-table" v-show="filteredMediaItems.length > 0 && !gridView">
                <thead>
                    <tr class="header-row">
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="media in filteredMediaItems"
                        v-bind:class="{selected: isMediaSelected(media)}"
                        v-on:click.stop="toggleSelectionOfMedia(media)"
                        draggable="true" v-on:dragstart="handleDragStart(media, $event)"
                        :key="media.name" v-bind:style="{height: thumbSize + 4 + 'px'}">
                        <td class="thumbnail-column" v-bind:style="{width: thumbSize + 'px'}"><img v-bind:src="media.url + '?width=' + thumbSize + '&height=' + thumbSize" /></td>
                        <td>
                            <p class="media-filename" v-bind:title="media.name">{{ media.name }}</p>
                        </td>
                        <td class=" text-center" style="width:200px;">
                            <a href="javascript:;" class="btn btn-light btn-sm mr-0" v-on:click.stop="renameMedia(media)"><i class="fa fa-edit"></i> @T["Edit"]</a>
                            <a href="javascript:;" class="btn btn-light btn-sm" v-on:click.stop="deleteMediaItem(media)"><i class="fa fa-trash"></i>@T["Delete"]</a>
                        </td>
                    </tr>
                </tbody>
            </table>


            <ol class="row" v-show="gridView">
                <li v-for="media in filteredMediaItems"
                    :key="media.name"
                    class="media-container-main-list-item"
                    v-bind:style="{width: thumbSize + 2 + 'px'}"
                    v-bind:class="{selected: isMediaSelected(media)}"
                    v-on:click.stop="toggleSelectionOfMedia(media)"
                    draggable="true" v-on:dragstart="handleDragStart(media, $event)">
                    <div class="thumb-container" v-bind:style="{height: thumbSize + 'px'}">
                        <img v-bind:src="media.url + '?width=' + thumbSize + '&height=' + thumbSize" />
                    </div>
                    <div class="media-container-main-item-title">
                        <a href="javascript:;" class="btn btn-light btn-sm float-right inline-media-button mr-4" v-on:click.stop="renameMedia(media)"><i class="fa fa-edit"></i></a>
                        <a href="javascript:;" class="btn btn-light btn-sm float-right inline-media-button" v-on:click.stop="deleteMediaItem(media)"><i class="fa fa-trash"></i></a>
                        <span class="media-filename" v-bind:title="media.name">{{ media.name }}</span>
                    </div>
                </li>
            </ol>
        </div>
    </div>
</div>

<input type="hidden" id="getFoldersUrl" value="@Url.Action("GetFolders", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="deleteFolderUrl" value="@Url.Action("DeleteFolder", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="createFolderUrl" value="@Url.Action("CreateFolder", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="getMediaItemsUrl" value="@Url.Action("GetMediaItems", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="deleteMediaUrl" value="@Url.Action("DeleteMedia", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="renameMediaUrl" value="@Url.Action("MoveMedia", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="deleteMediaListUrl" value="@Url.Action("DeleteMediaList", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="moveMediaListUrl" value="@Url.Action("MoveMediaList", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="uploadFiles" value="@Url.Action("Upload", "Admin", new { area = "OrchardCore.Media" })" />
<input type="hidden" id="deleteFolderMessage" value="@T["Are you sure you want to delete this folder?"]" />
<input type="hidden" id="deleteMediaMessage" value="@T["Are you sure you want to delete this media?"]" />
<input type="hidden" id="moveMediaMessage" value="@T["Are you sure you want to move the selected media to this folder?"]" />
<input type="hidden" id="sameFolderMessage" value="@T["The media is already on this folder"]" />

<div class="modal" id="createFolderModal" tabindex="-1" role="dialog" aria-labelledby="createFolderModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modelTitle">@T["Create Folder"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="input" class="form-control-label" id="input-label">@T["Folder name"]</label>
                    <input type="text" id="create-folder-name" class="form-control">
                </div>
                <div id="createFolderModal-errors"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="modalFooterOk">@T["Ok"]</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">@T["Cancel"]</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="renameMediaModal" tabindex="-1" role="dialog" aria-labelledby="renameMediaModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modelTitle">@T["Rename Item"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="input" class="form-control-label" id="input-label">@T["New Name"]</label>
                    <input type="text" id="new-item-name" class="form-control">
                    <input type="hidden" id="old-item-name" value="">
                </div>
                <div id="renameMediaModal-errors"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="renameMediaModalFooterOk">@T["Ok"]</button>
                <button type="button" class="btn btn-light" data-dismiss="modal">@T["Cancel"]</button>
            </div>
        </div>
    </div>
</div>
