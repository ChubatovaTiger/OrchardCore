@{
    Layout = null;
}

<div id="mediaApp" style="display:none; height:100%; margin: 0px -15px 0px -15px;  margin-top: 0; border-top: 1px solid rgba(0, 0, 0, 0.1);" v-on:dragover="handleScrollWhileDrag($event)">
    <div id="customdropzone">
        <h3>@T["Drop your media here"]</h3>
        <p>@T["Your files will be uploaded to the current folder when you drop them here"]</p>
    </div>

    <div class="alert message-warning" v-if="errors.length > 0">
        <ul>
            <li v-for="e in errors">
                <p>{{e}}</p>
            </li>
        </ul>
    </div>



    <div style="border: 1px purple; height:100%;" class="media-container d-flex align-items-stretch ">
        <div id="navigationApp"
             style="border-right: 1px solid rgba(0, 0, 0, 0.1); width:240px; padding:0; margin:0;"
             class="media-container-navigation flex-shrink-0" v-cloak>
            <div class="d-flex align-items-center" style="height:40px; border-bottom: 1px solid rgba(0, 0, 0, 0.1);">
                <p style="padding: 0 0 0 15px; font-weight:600; color: rgb(64, 64, 64); margin:0;">Media Explorer</p>                
            </div>
            
            <ol style="padding-left:15px;" id="folder-tree">
                <folder :model="root" ref="rootFolder" :selected-in-media-app="selectedFolder">
                </folder>
            </ol>
        </div>

        <div class="media-container-main flex-grow-1 pl-0" 
             style="border: 1px green;"
             v-cloak>

            <nav class="nav action-bar align-items-center" style="background-color: transparent; border-bottom: 1px solid rgba(0, 0, 0, 0.1); height:40px;">
                <div class="nav-item ">
                    <a href="javascript:;" class="nav-link active" v-on:click="selectAll">
                        @*<i class="fa fa-trash"></i>*@ @T["Select All"]
                    </a>
                </div>
                <div class="nav-item ">
                    <a href="javascript:;" class="nav-link active" v-on:click="unSelectAll" :disabled="selectedMedias.length < 1">
                        @*<i class="fa fa-trash"></i>*@ @T["Select None"]
                    </a>
                </div>
                <div class="nav-item ">
                    <a href="javascript:;" class="nav-link active" v-on:click="invertSelection">
                        @*<i class="fa fa-trash"></i>*@ @T["Invert"]
                    </a>
                </div>
                <div class="nav-item ">
                    <a href="javascript:;" class="nav-link active" v-on:click="deleteMediaList" :class="{disabled: selectedMedias.length < 1 }" >
                        @*<i class="fa fa-trash"></i>*@ @T["Delete"] <span class="selected-count">({{ selectedMedias.length}})</span>
                    </a>
                </div>

