@model MediaProfileViewModel

<h1>@RenderTitleSegments(T["Edit Media Profile"])</h1>
@* TODO Trigger preview. *@
<div asp-validation-summary="All"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" value="@Model.Name" name="sourceName" />
    <div class="row" >
        <div class="col-12 col-md-6">
            <div class="form-group" asp-validation-class-for="Name">
                <label asp-for="Name">@T["Name"]</label>
                <input asp-for="Name" class="form-control" autofocus />
                <span asp-validation-for="Name"></span>
                <span class="hint">@T["The name of the media profile."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="Hint">
                <label asp-for="Hint">@T["Hint"]</label>
                <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
                <span class="hint">@T["The hint for the media profile."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="SelectedWidth">
                <label asp-for="SelectedWidth">@T["Width"]</label>
                <select asp-for="SelectedWidth" asp-items="@Model.AvailableWidths" class="form-control content-preview-select" asp-validation-class-for="SelectedWidth"></select>
                <span asp-validation-for="SelectedWidth"></span>
                <span class="hint">@T["Select the width for the processed image."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="SelectedHeight">
                <label asp-for="SelectedHeight">@T["Height"]</label>
                <select asp-for="SelectedHeight" asp-items="@Model.AvailableHeights" class="form-control content-preview-select" asp-validation-class-for="SelectedHeight"></select>
                <span asp-validation-for="SelectedHeight"></span>
                <span class="hint">@T["Select the height for the processed image."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="SelectedMode">
                <label asp-for="SelectedMode">@T["Resize Mode"]</label>
                <select asp-for="SelectedMode" asp-items="Html.GetEnumSelectList<ResizeMode>()" class="form-control content-preview-select" asp-validation-class-for="SelectedMode"></select>
                <span asp-validation-for="SelectedMode"></span>
                <span class="hint">@T["Select the resize mode for the processed image."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="SelectedFormat">
                <label asp-for="SelectedFormat">@T["Format"]</label>
                <select asp-for="SelectedFormat" asp-items="Html.GetEnumSelectList<Format>()" class="form-control content-preview-select" asp-validation-class-for="SelectedFormat"></select>
                <span asp-validation-for="SelectedFormat"></span>
                <span class="hint">@T["Select the format for the processed image."]</span>
            </div>

            <div class="form-group" asp-validation-class-for="Quality">
                <label asp-for="Quality">@T["Quality"]</label>
                <input asp-for="Quality" class="form-control" min="0" max="100" />
                <span asp-validation-for="Quality"></span>
                <span class="hint">@T["The quality for the processed image. Only supported with the JPG format."]</span>
            </div>

            <div class="form-group">
                <div class="btn-group">
                    <button type="submit" name="submit" class="btn btn-success">@T["Save"]</button>
                    <button type="button" class="btn btn-success dropdown-toggle dropdown-toggle-split" data-reference="parent" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <span class="sr-only">@T["Toggle Dropdown"]</span>
                    </button>
                <div class="dropdown-menu">
                    <button class="dropdown-item" name="submit" type="submit" value="SaveAndContinue">@T["and continue"]</button>
                </div>
            </div>

            <a class="btn btn-secondary" asp-route-action="Index">@T["Cancel"]</a>
        </div>
    </div>


</form>
