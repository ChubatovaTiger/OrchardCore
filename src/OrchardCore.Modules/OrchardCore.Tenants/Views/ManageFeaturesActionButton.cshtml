@model ShapeViewModel<ShellSettingsEntry>
@using OrchardCore.Environment.Shell

@if (!Model.Value.ShellSettings.IsDefaultShell() && Model.Value.ShellSettings.IsRunning())
{
    <li><hr class="dropdown-divider"></li>
    <li>
        <a asp-action="Features" asp-controller="Admin" asp-route-tenant="@Model.Value.Name" asp-route-returnUrl="" asp-area="OrchardCore.Features" class="dropdown-item features">@T["Features"]</a>
    </li>
}
