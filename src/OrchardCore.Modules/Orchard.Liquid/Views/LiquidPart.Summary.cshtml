@using Fluid
@using Orchard.Liquid
@model Orchard.Liquid.ViewModels.LiquidPartViewModel
@inject Orchard.Liquid.ILiquidTemplateManager LiquidManager

@{
    string liquid = Model.Liquid;
    var templateContext = new TemplateContext();
    var html = await LiquidManager.RenderAsync(liquid, templateContext);
}

@liquid.Substring(0, Math.Min(html.Length, 200))
