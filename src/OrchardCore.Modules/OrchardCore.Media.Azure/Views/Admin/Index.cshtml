<h1>@RenderTitleSegments(T["Azure Media Storage Cache"])</h1>

<p class="alert alert-secondary">@T["Media is configured via appsettings.json."]</p>

<form asp-action="Purge">
    @* the form is necessary to generate and antiforgery token for the purge action *@

    <ul class="list-group">
        <li class="list-group-item">
            <div class="properties">
                <div class="related">
                    <a asp-action="Purge" class="btn btn-sm btn-danger float-right" data-title="@T["Purge All"]" data-message="@T["Are you sure you want to purge the entire media cache?"]" itemprop="RemoveUrl UnsafeUrl">@T["Purge All"]</a>
                </div>
                @T["Purge All"]
                <span class="hint">â€” @T["Purge all the media files from the cache"]</span>
            </div>
        </li>
    </ul>

</form>
