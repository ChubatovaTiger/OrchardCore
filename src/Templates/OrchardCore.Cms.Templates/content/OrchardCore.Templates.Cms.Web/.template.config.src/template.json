{
  "$schema": "http://json.schemastore.org/template",
  "author": "Orchard Project",
  "classifications": [ "Web", "Orchard Core", "CMS" ],
  "name": "Orchard Core Cms Web App",
  "identity": "OrchardCore.Templates.Cms.Web",
  "shortName": "occms",
  "sourceName": "OrchardCore.Templates.Cms.Web",
  "preferNameDirectory": true,
  "symbols": {
    "Logger": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "nlog",
          "description": "Configures NLog as the logger component."
        },
        {
          "choice": "serilog",
          "description": "Configures NLog as the logger component."
        },
        {
          "choice": "none",
          "description": "Do not configure logger."
        }
      ],
      "description": "Configures the logger component.",
      "defaultValue": "nlog"
    },
    "OrchardVersion": {
      "type": "parameter",
      "datatype": "string",
      "description": "Specifies which version of Orchard Core packages to use.",
      "replaces": "$(TemplateOrchardPackageVersion)",
      "defaultValue": "${TemplateOrchardVersion}"
    },
    "UseNLog": {
      "type": "computed",
      "value": "(Logger == \"nlog\")"
    },
    "UseSerilog": {
      "type": "computed",
      "value": "(Logger == \"serilog\")"
    },
    "LoggerDependency": {
      "type": "computed",
      "datatype": "string",
      "replaces": "$(LoggerDependency)",
      "value": "(Logger == \"serilog\" ? \"OrchardCore.Logging.Serilog\" : )"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!UseNLog)",
          "exclude": [
            "NLog.config"
          ]
        },
        {
          "condition": "(!UseSerilog)",
          "exclude": [
            "appsettings.serilog.json"
          ]
        },
        {
          "condition": "(UseSerilog)",
          "exclude": [
            "NLog.config",
            "appsettings.json"
          ],
          "rename": {
            "key": "appsettings.serilog.json",
            "value": "appsettings.json"
          }
        }
      ]
    }
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  }
}