<!DOCTYPE html>
<html>
<head>
    <title>{{RenderTitleSegments (T (SiteName)) "before"}}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link type="image/x-icon" rel="shortcut icon" href="/TheTheme/Content/favicon.ico" />

    {{script asp-name="bootstrap" use-cdn="true" version="3" at="Foot"}}

    {{style asp-name="bootstrap" use-cdn="true" version="3"}}
    {{style asp-name="bootstrap-theme"}}
    {{style asp-src="https://getbootstrap.com/examples/theme/theme.css"}}

    {{resources type="Meta"}}
    {{resources type="HeadLink"}}
    {{resources type="Stylesheet"}}
    {{resources type="HeadScript"}}
    {{RenderSectionAsync "Header" "false"}}

    {{script "Foot" "document.write('<!-- some other script -->');"}}
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">{{T (SiteName)}}</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">

                {{menu alias="alias:main-menu" cache-id="main-menu" cache-duration="00:05:00" cache-tag="alias:main-menu"}}

                {{form asp-route-area="Orchard.Users" asp-controller="Account" asp-action="LogOff" method="post"}}
                    <ul class="nav navbar-nav navbar-right">
                        {{#if (IsAuthenticated)}}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{UserName}}<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li>{{a asp-route-area="Orchard.Admin" asp-controller="Admin" asp-action="Index"}}{{T "Dashboard"}}{{/a}}</li>
                                    <li class="divider"></li>
                                    <li>{{a asp-route-area="Orchard.Users" asp-controller="Account" asp-action="ChangePassword"}}{{T "Change Password"}}{{/a}}</li>
                                    <li>
                                        <button type="submit" class="btn btn-link navbar-btn navbar-link">{{T "Log off"}}</button>
                                    </li>
                                </ul>
                            </li>
                        {{else}}
                            <li>{{a asp-route-area="Orchard.Users" asp-controller="Account" asp-action="Login"}}{{T "Log in"}}{{/a}}</li>
                        {{/if}}
                    </ul>
                {{/form}}

            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        {{RenderBodyAsync}}
    </div><!-- /.container -->

    <div class="container">
        {{RenderSectionAsync "Footer" "false"}}
    </div>

    {{resources type="FootScript"}}

</body>
</html>