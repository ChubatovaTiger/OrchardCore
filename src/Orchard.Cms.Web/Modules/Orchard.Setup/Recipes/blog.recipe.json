{
  "name": "Blog",
  "displayName": "Blog",
  "description": "Provides a functional Blog with CMS features.",
  "author": "The Orchard Team",
  "website": "http://orchardproject.net",
  "version": "2.0",
  "issetuprecipe": true,
  "categories": [ "default" ],
  "tags": [ "blog" ],
  "steps": [
    {
      "name": "feature",
      "disable": [],
      "enable": [
        // SaaS
        "Orchard.Admin",
        "Orchard.Commons",
        "Orchard.Diagnostics",
        "Orchard.DynamicCache",
        "Orchard.Modules",
        "Orchard.Navigation",
        "Orchard.Recipes",
        "Orchard.Resources",
        "Orchard.Roles",
        "Orchard.Settings",
        "Orchard.Tenants",
        "Orchard.Themes",
        "Orchard.Users",

        // Content Management
        "Lucene",
        "Orchard.Alias",
        "Orchard.Autoroute",
        "Orchard.Body",
        "Orchard.ContentFields",
        "Orchard.Contents",
        "Orchard.ContentTypes",
        "Orchard.Demo",
        "Orchard.Deployment",
        "Orchard.Deployment.Remote",
        "Orchard.Indexing",
        "Orchard.Lists",
        "Orchard.Menu",
        "Orchard.Title",
        "Orchard.Tokens",
        "Orchard.Tokens.Content",

        // Themes
        "TheBlogTheme",
        "TheAdmin",
        "SafeMode"
      ]
    },
    {
      "name": "themes",
      "admin": "TheAdmin",
      "site": "TheBlogTheme"
    },
    {
      "name": "settings",
      "HomeRoute": {
        "Action": "Index",
        "Controller": "Home",
        "Area": "Orchard.Demo"
      }
    },
    {
      "name": "content",
      "Data": [
        {
          "ContentType": "Menu",
          "ContentItemId": "[uuid()]",
          "Latest": true,
          "Number": 1,
          "Published": true,
          "MenuPart": {},
          "TitlePart": { "Title": "Main Menu" },
          "MenuItemsListPart": {
            "MenuItems": [
              {
                "ContentType": "LinkMenuItem",
                "ContentItemId": "[uuid()]",
                "LinkMenuItemPart": {
                  "Name": "Home",
                  "Url": "~/"
                }
              }
            ]
          },
          "AliasPart": { "Alias": "main-menu" }
        }
      ]
    },
    {
      "name": "ContentDefinition",
      "ContentTypes": [
        {
          "Name": "Article",
          "DisplayName": "Article",
          "Hidden": false,
          "Settings": {
            "Creatable": "True",
            "Draftable": "True",
            "Listable": "True",
            "Securable": "True",
            "Stereotype": null
          },
          "ContentTypePartDefinitionRecords": [
            {
              "PartName": "Article",
              "Name": "Article",
              "Settings": {
                "Position": "2"
              }
            },
            {
              "PartName": "AutoroutePart",
              "Name": "AutoroutePart",
              "Settings": {
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "Pattern": "{{slug}}",
                "AllowCustomPath": "True",
                "ShowHomepageOption": "False",
                "Position": "1"
              }
            },
            {
              "PartName": "BodyPart",
              "Name": "BodyPart",
              "Settings": {
                "ContentIndexSettings": {
                  "Included": false,
                  "Stored": false,
                  "Analyzed": false,
                  "Sanitized": false,
                  "Tokenized": false,
                  "Template": null
                },
                "BodyPartSettings": {
                  "RenderTokens": false,
                  "Editor": "Wysiwyg"
                },
                "Position": "3"
              }
            },
            {
              "PartName": "TitlePart",
              "Name": "TitlePart",
              "Settings": {
                "Position": "0"
              }
            }
          ]
        }
      ]
    }
  ]
}