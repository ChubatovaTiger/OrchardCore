@using Orchard.Title.ViewModels;
@model TitlePartViewModel

<fieldset class="form-group" asp-validation-class-for="Title">
    <label asp-for="Title">@T["Title"] <span asp-validation-for="Title"></span></label>
    <input asp-for="Title" class="form-control" />
    <span class="hint">@T["The title of the content item."]</span>
</fieldset>

<script at="Foot">
    $(function () {
        $('#@Html.IdFor(m => m.Title)')
        .on('input', function () {
            $(document).trigger('contentpreview:render');
        })
        .on('keyup', function (event) {
            // handle backspace
            if (event.keyCode == 46) {
                $(document).trigger('contentpreview:render');
            }
        });
    });
</script>