@model Orchard.ContentFields.Settings.LinkFieldSettings
@using Orchard.ContentFields.Settings

<div class="row">
    <fieldset class="form-group col-md-6">
        <div class="form-check">
            <label class="form-check-label">
                <input asp-for="Required" type="checkbox" class="form-check-input" checked="@Model.Required" />
                @T["Required"]
                <span class="hint">@T["Whether the url is required."]</span>
            </label>
        </div>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="Hint">@T["Hint for the url"]</label>
        <input asp-for="Hint" type="text" class="form-control" />
        <span class="hint">@T["The hint text to display for the url on the editor."]</span>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="Hint">@T["Hint for the text"]</label>
        <input asp-for="Hint" type="text" class="form-control" />
        <span class="hint">@T["The hint text to display for the text of the link on the editor."]</span>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="TargetMode">@T["Target"]</label>
        <select asp-for="TargetMode" class="form-control">
            <option value="@TargetMode.None" selected="@(Model.TargetMode == TargetMode.None)">@T["No target"]</option>
            <option value="@TargetMode.NewWindow" selected="@(Model.TargetMode == TargetMode.NewWindow)">@T["Open link in a new window (_blank)"]</option>
            <option value="@TargetMode.Parent" selected="@(Model.TargetMode == TargetMode.Parent)">@T["Open link in the parent frame (_parent)"]</option>
            <option value="@TargetMode.Top" selected="@(Model.TargetMode == TargetMode.Top)">@T["Open link in the full body of the window (_top)"]</option>
            <option value="@TargetMode.UserChoice" selected="@(Model.TargetMode == TargetMode.UserChoice)">@T["Allow the user to enter the target of the link"]</option>
        </select>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="LinkTextMode">@T["Text"]</label>
        <select asp-for="LinkTextMode" class="form-control">
            <option value="@LinkTextMode.Optional" selected="@(Model.LinkTextMode == LinkTextMode.Optional)">@T["Text is optional"]</option>
            <option value="@LinkTextMode.Required" selected="@(Model.LinkTextMode == LinkTextMode.Required)">@T["Text is required"]</option>
            <option value="@LinkTextMode.Static" selected="@(Model.LinkTextMode == LinkTextMode.Static)">@T["Use the default value"]</option>
            <option value="@LinkTextMode.Url" selected="@(Model.LinkTextMode == LinkTextMode.Url)">@T["Use the url of the link"]</option>
        </select>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="UrlPlaceholder">@T["Watermark for the url"]</label>
        <input asp-for="UrlPlaceholder" type="text" class="form-control" />
        <span class="hint">@T["A hint (placeholder) to display when the input of the url is empty."]</span>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="TextPlaceholder">@T["Watermark for the text"]</label>
        <input asp-for="TextPlaceholder" type="text" class="form-control" />
        <span class="hint">@T["A hint (placeholder) to display when the input of the text is empty."]</span>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="DefaultValue">@T["Default value of the url"]</label>
        <input asp-for="DefaultValue" type="text" class="form-control" />
        <span class="hint">@T["A valid url proposed when creating a content item."]</span>
        <span asp-validation-for="DefaultValue" class="text-danger"></span>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="TextDefaultValue">@T["Default value of the text"]</label>
        <input asp-for="TextDefaultValue" type="text" class="form-control" />
        <span class="hint">@T["The default link text proposed when creating a content item."]</span>
    </fieldset>
</div>