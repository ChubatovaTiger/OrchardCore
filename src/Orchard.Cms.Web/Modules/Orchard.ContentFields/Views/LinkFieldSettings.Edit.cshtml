@model Orchard.ContentFields.Settings.LinkFieldSettings
@using Orchard.ContentFields.Settings

<fieldset class="form-group">
    <div class="form-check">
        <label class="form-check-label">
            <input asp-for="Required" type="checkbox" class="form-check-input" checked="@Model.Required" />
            @T["Required"]
            <span class="hint">@T["Whether the url is required."]</span>
        </label>
    </div>
</fieldset>
<fieldset class="form-group">
    <div class="row col-md">
        <label asp-for="Hint">@T["Hint"]</label>
        <textarea asp-for="Hint" rows="2" class="form-control"></textarea>
        <span class="hint">@T["The hint text to display for this field on the editor."]</span>
    </div>
</fieldset>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="DefaultValue">@T["Default value"]</label>
        <input asp-for="DefaultValue" type="text" class="form-control" />
        <span class="hint">@T["A valid url proposed  when creating a content item."]</span>
        <span asp-validation-for="DefaultValue" class="text-danger"></span>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="TextDefaultValue">@T["Link text default value"]</label>
        <input asp-for="TextDefaultValue" type="text" class="form-control" />
        <span class="hint">@T["The default link text proposed when creating a content item."]</span>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="TargetMode">@T["Target"]</label>
        <select asp-for="TargetMode" class="form-control">
            <option value="@TargetMode.None" selected="@(Model.TargetMode == TargetMode.None)">@T["No target"]</option>
            <option value="@TargetMode.NewWindow" selected="@(Model.TargetMode == TargetMode.NewWindow)">@T["Open link in new window"]</option>
            <option value="@TargetMode.Parent" selected="@(Model.TargetMode == TargetMode.Parent)">@T["Open link in the parent frameset"]</option>
            <option value="@TargetMode.Top" selected="@(Model.TargetMode == TargetMode.Top)">@T["Open link in the full body of the window"]</option>
            <option value="@TargetMode.UserChoice" selected="@(Model.TargetMode == TargetMode.UserChoice)">@T["Allow the user to choose"]</option>
        </select>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="LinkTextMode">@T["Link text"]</label>
        <select asp-for="LinkTextMode" class="form-control">
            <option value="@LinkTextMode.Optional" selected="@(Model.LinkTextMode == LinkTextMode.Optional)">@T["Optional"]</option>
            <option value="@LinkTextMode.Required" selected="@(Model.LinkTextMode == LinkTextMode.Required)">@T["Required"]</option>
            <option value="@LinkTextMode.Static" selected="@(Model.LinkTextMode == LinkTextMode.Static)">@T["Static"]</option>
            <option value="@LinkTextMode.Url" selected="@(Model.LinkTextMode == LinkTextMode.Url)">@T["Url"]</option>
        </select>
    </fieldset>
</div>
<div class="row">
    <fieldset class="form-group col-md-6">
        <label asp-for="UrlPlaceholder">@T["Watermark (placeholder) for the url"]</label>
        <input asp-for="UrlPlaceholder" type="text" class="form-control" />
        <span class="hint">@T["A hint to display when the input of url is empty. (optional)"]</span>
    </fieldset>
    <fieldset class="form-group col-md-6">
        <label asp-for="TextPlaceholder">@T["Watermark (placeholder) for the text of the link"]</label>
        <input asp-for="TextPlaceholder" type="text" class="form-control" />
        <span class="hint">@T["A hint to display when the input of text is empty. (optional)"]</span>
    </fieldset>
</div>
