{
  "name": "Blog.Tests",
  "displayName": "Blog Tests",
  "description": "Setup recipe for automated UI test execution using the Blog recipe.",
  "author": "The Orchard Core Team",
  "website": "https://orchardcore.net",
  "version": "1.0.0",
  "issetuprecipe": true,
  "categories": [ "test" ],
  "tags": [ "blog", "test" ],
  "steps": [
    {
      "name": "recipes",
      "Values": [
        {
          "executionid": "OrchardCore.Tests.UI",
          "name": "Blog"
        }
      ]
    },
    {
      "name": "feature",
      "enable": [
        "OrchardCore.Users.Registration"
      ]
    },
    {
      "name": "settings",
      "UseCdn": false,
      "SmtpSettings": {
        "DefaultSender": "sender@example.com"
      },
      "LocalizationSettings": {
        "DefaultCulture": "en-US",
        "SupportedCultures": [
          "en-US"
        ]
      },
      "RegistrationSettings": {
        "UsersCanRegister": 1,
        "UsersMustValidateEmail": false,
        "UsersAreModerated": false
      }
    }
  ]
}
